<div class="min-h-screen bg-gradient-to-br from-pink-100 to-purple-100 py-8">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Your Surprise Date! ✨</h1>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 mb-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @generated_date[:title] %></h2>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <div class="text-3xl mb-2">💰</div>
            <div class="text-sm text-gray-600">Budget</div>
            <div class="font-bold text-green-600">$<%= @generated_date[:budget] %></div>
          </div>
          
          <div class="text-center p-4 bg-blue-50 rounded-lg">
            <div class="text-3xl mb-2">🕒</div>
            <div class="text-sm text-gray-600">Time</div>
            <div class="font-bold text-blue-600 capitalize"><%= @generated_date[:time_of_day] || 'Flexible' %></div>
          </div>
          
          <div class="text-center p-4 bg-purple-50 rounded-lg">
            <div class="text-3xl mb-2">📍</div>
            <div class="text-sm text-gray-600">Setting</div>
            <div class="font-bold text-purple-600 capitalize"><%= @generated_date[:setting] || 'Mixed' %></div>
          </div>
          
          <div class="text-center p-4 bg-orange-50 rounded-lg">
            <div class="text-3xl mb-2">⚡</div>
            <div class="text-sm text-gray-600">Effort</div>
            <div class="font-bold text-orange-600 capitalize"><%= @generated_date[:effort] || 'Moderate' %></div>
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3">📝 Description</h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-gray-700"><%= @generated_date[:description] %></p>
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3">🗓️ Your Date Plan</h3>
          <div class="bg-purple-50 p-6 rounded-lg">
            <div class="text-gray-700"><%= simple_format(@generated_date[:detailed_plan]) %></div>
          </div>
        </div>


        <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t border-gray-200">
 <%= form_with url: saved_dates_path, method: :post, html: { class: "flex-1" } do %>
  <%= hidden_field_tag :title, @generated_date[:title] %>
  <%= hidden_field_tag :description, @generated_date[:description] %>
  <%= hidden_field_tag :budget, @generated_date[:budget] %>
  <%= hidden_field_tag :time_of_day, @generated_date[:time_of_day] %>
  <%= hidden_field_tag :setting, @generated_date[:setting] %>
  <%= hidden_field_tag :effort, @generated_date[:effort] %>
  <%= hidden_field_tag :location, @generated_date[:location] %>
  <%= submit_tag "💾 Save This Date", class: "w-full bg-green-500 text-white text-center py-3 px-6 rounded-lg hover:bg-green-600 transition-colors font-medium shadow-md cursor-pointer" %>
<% end %>
  
  <%= link_to "🔄 Generate Another", root_path, 
      class: "flex-1 bg-purple-500 text-white text-center py-3 px-6 rounded-lg hover:bg-purple-600 transition-colors font-medium shadow-md" %>
  <%= link_to "📚 View Saved Dates", saved_dates_path, 
      class: "flex-1 bg-gray-500 text-white text-center py-3 px-6 rounded-lg hover:bg-gray-600 transition-colors font-medium shadow-md" %>
        </div>
      </div>
    </div>
  </div>
</div>
