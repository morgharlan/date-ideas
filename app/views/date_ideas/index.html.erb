<div class="min-h-screen bg-gradient-to-br from-pink-100 to-purple-100 py-8">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Find Your Perfect Date</h1>
      <p class="text-gray-600">Tell us what you're looking for and we'll create a surprise date just for you!</p>
    </div>

    <!-- Main Input Card -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <%= form_with url: generate_date_ideas_path, method: :post, local: true, class: "space-y-6" do |form| %>
          
          <!-- Budget -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Budget Range</label>
            <select name="budget" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
              <option value="">Any budget</option>
              <option value="free">Free ($0)</option>
              <option value="low">Low ($1-50)</option>
              <option value="medium">Medium ($51-150)</option>
              <option value="high">High ($151-300)</option>
              <option value="luxury">Luxury ($300+)</option>
            </select>
          </div>

          <!-- Time of Day -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Time of Day</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
              <% ['morning', 'afternoon', 'evening', 'night'].each do |time| %>
                <label class="flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                  <%= radio_button_tag 'time_of_day', time, false, class: "sr-only peer" %>
                  <span class="peer-checked:bg-purple-500 peer-checked:text-white w-full text-center py-1 rounded transition-colors">
                    <%= time.capitalize %>
                  </span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Setting -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Setting Preference</label>
            <div class="grid grid-cols-2 gap-3">
              <% ['indoor', 'outdoor'].each do |setting| %>
                <label class="flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                  <%= radio_button_tag 'setting', setting, false, class: "sr-only peer" %>
                  <span class="peer-checked:bg-purple-500 peer-checked:text-white w-full text-center py-1 rounded transition-colors">
                    <%= setting.capitalize %>
                  </span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Effort Level -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Effort Level</label>
            <div class="grid grid-cols-3 gap-3">
              <% ['low', 'medium', 'high'].each do |effort| %>
                <label class="flex items-center justify-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                  <%= radio_button_tag 'effort', effort, false, class: "sr-only peer" %>
                  <span class="peer-checked:bg-purple-500 peer-checked:text-white w-full text-center py-1 rounded transition-colors">
                    <%= effort.capitalize %>
                  </span>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Location -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Your Location</label>
            <%= text_field_tag 'location', '', placeholder: "e.g., New York, NY or Chicago, IL", 
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <!-- Additional Preferences -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Additional Preferences (Optional)</label>
            <%= text_area_tag 'additional_notes', '', placeholder: "Any specific interests, dietary restrictions, or other preferences...", 
                rows: 3, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= submit_tag "Generate My Surprise Date! âœ¨", 
                class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-4 px-6 rounded-lg hover:from-purple-600 hover:to-pink-600 transform hover:scale-105 transition-all duration-200 shadow-lg" %>
          </div>
        <% end %>
      </div>

      <!-- Archive Link -->
      <div class="text-center mt-8">
        <%= link_to "View My Saved Dates", saved_dates_path, 
            class: "inline-flex items-center text-purple-600 hover:text-purple-800 font-medium" %>
        <span class="ml-2">ðŸ“š</span>
      </div>
    </div>
  </div>
</div>
