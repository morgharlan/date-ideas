<div class="min-h-screen bg-gradient-to-br from-pink-100 to-purple-100 py-8">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Your AI-Generated Surprise Date! ğŸ¤–âœ¨</h1>
        <p class="text-gray-600">Personalized just for you by ChatGPT</p>
      </div>

      <!-- Generated Date Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 mb-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @generated_date[:title] %></h2>
        
        <!-- Quick Details -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="text-center p-4 bg-gradient-to-br from-green-50 to-green-100 rounded-lg">
            <div class="text-3xl mb-2">ğŸ’°</div>
            <div class="text-sm text-gray-600">Budget</div>
            <div class="font-bold text-green-600">$<%= @generated_date[:budget] %></div>
          </div>
          
          <div class="text-center p-4 bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg">
            <div class="text-3xl mb-2">ğŸ•’</div>
            <div class="text-sm text-gray-600">Time</div>
            <div class="font-bold text-blue-600 capitalize"><%= @generated_date[:time_of_day] || 'Flexible' %></div>
          </div>
          
          <div class="text-center p-4 bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg">
            <div class="text-3xl mb-2">ğŸ“</div>
            <div class="text-sm text-gray-600">Setting</div>
            <div class="font-bold text-purple-600 capitalize"><%= @generated_date[:setting] || 'Mixed' %></div>
          </div>
          
          <div class="text-center p-4 bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg">
            <div class="text-3xl mb-2">âš¡</div>
            <div class="text-sm text-gray-600">Effort</div>
            <div class="font-bold text-orange-600 capitalize"><%= @generated_date[:effort] || 'Moderate' %></div>
          </div>
        </div>

        <!-- Description -->
        <div class="mb-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3 flex items-center">
            <span class="mr-2">ğŸ“</span> Description
          </h3>
          <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-gray-700 leading-relaxed"><%= @generated_date[:description] %></p>
          </div>
        </div>

        <!-- Detailed Plan -->
        <div class="mb-6">
          <h3 class="text-xl font-semibold text-gray-800 mb-3 flex items-center">
            <span class="mr-2">ğŸ—“ï¸</span> Your Date Plan
          </h3>
          <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-lg">
            <div class="whitespace-pre-line text-gray-700 leading-relaxed"><%= @generated_date[:detailed_plan] %></div>
          </div>
        </div>

        <!-- Tips (if available) -->
        <% if @generated_date[:tips].present? %>
          <div class="mb-6">
            <h3 class="text-xl font-semibold text-gray-800 mb-3 flex items-center">
              <span class="mr-2">ğŸ’¡</span> Pro Tips
            </h3>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
              <p class="text-gray-700"><%= @generated_date[:tips] %></p>
            </div>
          </div>
        <% end %>

        <!-- Error Notice (if API failed) -->
        <% if @generated_date[:api_error] %>
          <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg">
            <p class="text-red-700">
              <strong>Note:</strong> We used a backup suggestion since our AI is temporarily unavailable. 
              Try generating another date for a fresh AI-powered idea!
            </p>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t border-gray-200">
          <%= link_to "ğŸ’¾ Save This Date", "#", 
              class: "flex-1 bg-green-500 text-white text-center py-3 px-6 rounded-lg hover:bg-green-600 transition-colors font-medium shadow-md" %>
          <%= link_to "ğŸ”„ Generate Another", root_path, 
              class: "flex-1 bg-purple-500 text-white text-center py-3 px-6 rounded-lg hover:bg-purple-600 transition-colors font-medium shadow-md" %>
          <%= link_to "ğŸ“š View Saved Dates", saved_dates_path, 
              class: "flex-1 bg-gray-500 text-white text-center py-3 px-6 rounded-lg hover:bg-gray-600 transition-colors font-medium shadow-md" %>
        </div>
      </div>

      <!-- Your Preferences Used -->
      <div class="bg-white rounded-lg shadow-md p-4">
        <h4 class="font-medium text-gray-800 mb-2">Preferences Used:</h4>
        <div class="text-sm text-gray-600 flex flex-wrap gap-2">
          <% @generated_date[:preferences_used].each do |key, value| %>
            <% if value.present? %>
              <span class="bg-gray-100 px-2 py-1 rounded">
                <%= key.to_s.humanize %>: <%= value %>
              </span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
