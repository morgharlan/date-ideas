<div class="min-h-screen bg-gradient-to-br from-blue-100 to-indigo-100 py-8">
  <div class="container mx-auto px-4">
    
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">My Saved Dates 📚</h1>
      <p class="text-gray-600">Your collection of memorable and planned dates</p>
      <%= link_to "← Generate New Date", root_path, 
          class: "inline-block mt-4 text-purple-600 hover:text-purple-800 font-medium" %>
    </div>

    <% if @saved_dates&.any? %>
      <!-- Filter Tabs -->
      <div class="max-w-4xl mx-auto mb-8">
        <div class="flex flex-wrap justify-center space-x-1 bg-white rounded-lg p-1 shadow-md">
          <%= link_to "All", saved_dates_path, 
              class: "px-4 py-2 rounded-md font-medium transition-colors #{'bg-purple-500 text-white' if params[:filter].blank?} #{'text-gray-600 hover:text-gray-800' unless params[:filter].blank?}" %>
          <%= link_to "Favorites ⭐", saved_dates_path(filter: 'favorites'), 
              class: "px-4 py-2 rounded-md font-medium transition-colors #{'bg-purple-500 text-white' if params[:filter] == 'favorites'} #{'text-gray-600 hover:text-gray-800' unless params[:filter] == 'favorites'}" %>
          <%= link_to "Completed ✅", saved_dates_path(filter: 'completed'), 
              class: "px-4 py-2 rounded-md font-medium transition-colors #{'bg-purple-500 text-white' if params[:filter] == 'completed'} #{'text-gray-600 hover:text-gray-800' unless params[:filter] == 'completed'}" %>
          <%= link_to "Planned 📅", saved_dates_path(filter: 'planned'), 
              class: "px-4 py-2 rounded-md font-medium transition-colors #{'bg-purple-500 text-white' if params[:filter] == 'planned'} #{'text-gray-600 hover:text-gray-800' unless params[:filter] == 'planned'}" %>
        </div>
      </div>

      <!-- Saved Dates Grid -->
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @saved_dates.each do |saved_date| %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6 relative">
              
              <!-- Status Badges -->
              <div class="absolute top-4 right-4 flex space-x-1">
                <% if saved_date.favorite? %>
                  <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">⭐ Favorite</span>
                <% end %>
                <% if saved_date.completed? %>
                  <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">✅ Done</span>
                <% else %>
                  <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">📅 Planned</span>
                <% end %>
              </div>

              <!-- Date Idea Content -->
              <div class="mb-4 pt-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2"><%= saved_date.date_idea.title %></h3>
                
                <% if saved_date.date_idea.description.present? %>
                  <p class="text-gray-600 text-sm mb-3"><%= truncate(saved_date.date_idea.description, length: 100) %></p>
                <% end %>

                <!-- Quick Info -->
                <div class="grid grid-cols-2 gap-2 text-xs text-gray-500 mb-3">
                  <% if saved_date.date_idea.budget.present? %>
                    <div>💰 $<%= saved_date.date_idea.budget %></div>
                  <% end %>
                  <% if saved_date.date_idea.time_of_day.present? %>
                    <div>🕒 <%= saved_date.date_idea.time_of_day.capitalize %></div>
                  <% end %>
                  <% if saved_date.date_idea.setting.present? %>
                    <div>📍 <%= saved_date.date_idea.setting.capitalize %></div>
                  <% end %>
                  <% if saved_date.date_idea.effort.present? %>
                    <div>⚡ <%= saved_date.date_idea.effort.capitalize %></div>
                  <% end %>
                </div>
              </div>

              <!-- Personal Notes -->
              <% if saved_date.note.present? %>
                <div class="bg-gray-50 rounded-lg p-3 mb-4">
                  <h4 class="text-sm font-medium text-gray-700 mb-1">My Notes:</h4>
                  <p class="text-sm text-gray-600"><%= saved_date.note %></p>
                </div>
              <% end %>

              <!-- Action Buttons -->
              <div class="flex space-x-2">
                <%= link_to saved_date.date_idea, class: "flex-1 text-center bg-blue-500 text-white text-xs py-2 px-3 rounded hover:bg-blue-600 transition-colors" do %>
                  View Details
                <% end %>
                
                <!-- Toggle Favorite -->
                <%= link_to toggle_favorite_saved_date_path(saved_date), method: :patch, 
                    class: "bg-yellow-500 text-white text-xs py-2 px-3 rounded hover:bg-yellow-600 transition-colors" do %>
                  <%= saved_date.favorite? ? "⭐" : "☆" %>
                <% end %>
                
                <!-- Toggle Completed -->
                <%= link_to mark_completed_saved_date_path(saved_date), method: :patch,
                    class: "bg-green-500 text-white text-xs py-2 px-3 rounded hover:bg-green-600 transition-colors" do %>
                  <%= saved_date.completed? ? "✅" : "📅" %>
                <% end %>
                
                <!-- Delete -->
                <%= link_to saved_date, method: :delete, 
                    data: { confirm: "Are you sure you want to remove this saved date?" },
                    class: "bg-red-500 text-white text-xs py-2 px-3 rounded hover:bg-red-600 transition-colors" do %>
                  🗑️
                <% end %>
              </div>

              <!-- Date Saved -->
              <div class="text-xs text-gray-400 mt-3 text-center">
                Saved <%= saved_date.created_at.strftime("%B %d, %Y") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="max-w-md mx-auto text-center">
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <div class="text-6xl mb-4">📅</div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">No Saved Dates Yet</h3>
          <p class="text-gray-600 mb-6">Start by generating your first surprise date!</p>
          <%= link_to "Generate My First Date", root_path, 
              class: "bg-purple-500 text-white px-6 py-3 rounded-lg hover:bg-purple-600 transition-colors font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
