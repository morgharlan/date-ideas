<div class="min-h-screen bg-gradient-to-br from-green-100 to-blue-100 py-8">
  <div class="container mx-auto px-4">
    <div class="max-w-md mx-auto">
      
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Welcome Back! 👋</h1>
        <p class="text-gray-600">Sign in to access your saved dates</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8">
        <%= form_with url: sign_in_path, local: true, class: "space-y-6" do |form| %>
          
          <% if flash[:alert] %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-red-700"><%= flash[:alert] %></p>
            </div>
          <% end %>

          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, placeholder: "your@email.com", 
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password, placeholder: "Enter your password", 
                class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div class="pt-4">
            <%= form.submit "Sign In", 
                class: "w-full bg-gradient-to-r from-blue-500 to-green-500 text-white font-semibold py-4 px-6 rounded-lg hover:from-blue-600 hover:to-green-600 transform hover:scale-105 transition-all duration-200 shadow-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-6">
          <p class="text-gray-600">
            Don't have an account? 
            <%= link_to "Sign Up", sign_up_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
          </p>
        </div>
      </div>

      <div class="text-center mt-8">
        <%= link_to "← Back to Date Ideas", root_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    </div>
  </div>
</div>
